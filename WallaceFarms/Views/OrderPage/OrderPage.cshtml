@model WallaceFarms.Models.OrderModel
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
	<head>
        <title>@ViewBag.Title</title>
        <meta charset="utf-8" />
        <meta name="keywords" content="farm, wallace, newcastle, beef, pennslyvania, angus, herford, fresh, order">
        <meta name="description" content="Welcome to Wallace Farm, Newcastle PA - Quality fresh Beef available for order.">
	</head>

	<body>

		<div class="frame">	
            <div class="wrapper">
	            <div class="banner"></div>
	            <div class="content" id="filled">
                    <article>
                        @using (Html.BeginForm())
                            {
                            <fieldset>
                            <legend>Place Your Order</legend>
                            @Html.HiddenFor(model => model.theOrder.OrderID)

                            <div class="editor-label">
                                @Html.LabelFor(model => model.theOrder.Name)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.theOrder.Name)
                            </div>
                            <br />

                            <div class="editor-label">
                                @Html.LabelFor(model => model.theOrder.Phone)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.theOrder.Phone)
                            </div>
                            <br />

                            <div class="editor-label">
                                @Html.LabelFor(model => model.theOrder.Email)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.theOrder.Email)
                            </div>
                            <br />

                            <!-- BEEF ORDER FEILD  -->
                            @Html.HiddenFor(model => model.theBeefOrder.BeefOrderID)
                            @Html.HiddenFor(model => model.theBeefOrder.OrderID)

                            <div class="editor-label">
                                <p>Number of Quarters</p>
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.theBeefOrder.NumQuarters)
                            </div>
                            <br />

                            <input type="submit" value="Submit Order" />

                        </fieldset>
                        }
                    </article>
	       
                </div>

	            <div class="menu"><ul>
		                <li><a href="Info">About Us</a></li>
		
		                <li id="right_menu"><a href="OrderPage">Order Beef</a></li>
	                </ul>

	                <div id="footer">
			                <span class="copyright"> &copy; @DateTime.Today.Year Wallace Farm</span>
	                </div>
	            </div>

	        </div>

         </div>
	</body>
</html>